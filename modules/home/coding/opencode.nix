{
  flake.modules.homeManager.opencode = _: {
    # Default is false, enable explicitly in host configuration
    programs.opencode.enable = true;

    programs.opencode.settings = {
      plugin = [
        "opencode-antigravity-auth@beta"
      ];

      provider.google = {
        models = {
